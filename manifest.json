{
    "manifest_version": 3,
    "name": "Texteame",
    "version": "1.0",
    "description": "Automatización de publicación en Texteame.es",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "icons": {
      "512": "icon.png"
    },
    "background": {
      
    },
    "content_scripts": [
      {
        "matches": ["https://texteame.es/node/*", "https://www.destacamos.net/*", "https://www.loquosex.com/publicar-anuncio/*"],
        "js": ["content.js"]
      }
  ],
     "action": {
      "default_popup": "popup.html"
    }
}